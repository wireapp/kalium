CREATE TABLE GlobalMetadata (
    key TEXT NOT NULL PRIMARY KEY,
    stringValue TEXT NOT NULL
);

insertValue:
INSERT INTO GlobalMetadata(key, stringValue)
VALUES (?, ?)
ON CONFLICT(key) DO UPDATE SET stringValue = excluded.stringValue;

selectValueByKey:
SELECT stringValue FROM GlobalMetadata WHERE key = ?;

deleteValue:
DELETE FROM GlobalMetadata WHERE key = ?;

deleteAllExcept:
DELETE FROM GlobalMetadata WHERE key NOT IN ?;

deleteAll:
DELETE FROM GlobalMetadata;
